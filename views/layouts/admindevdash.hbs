  <script>
    function approveCompany(event){
      console.log(event.target.id);
      fetch(`/approve-comp?approve=1&email=${event.target.id}`);
      document.getElementsByClassName(event.target.id)[0].remove();
    }

    function sendCandidateData(event){
      event.preventDefault();
      document.getElementsByClassName(event.target.id)[0].remove();
      fetch(`/forwardapplicant?cname=${event.target.elements.companyName.value}&demail=${event.target.id}`)
